---
import Layout from '../layouts/Layout.astro';
import SectionLead from '../components/SectionLead.astro';
import PageSection from '../components/PageSection.astro';

const principles = [
  {
    title: 'Precision over noise',
    body: 'We prioritize clarity, measurable outcomes, and clean execution over hype or vanity design.',
  },
  {
    title: 'Systems over heroics',
    body: 'The website should be maintainable, scalable, and easy to hand off — not dependent on fragile hacks.',
  },
  {
    title: 'Client ownership always',
    body: 'You receive full source ownership and a structure your team can actually understand.',
  },
];
---

<Layout title="About | Codestri">
  <PageSection>
    <SectionLead
      eyebrow="About Codestri"
      title="Built for founders who want real website performance, not surface-level polish."
      description="Codestri exists to modernize underperforming sites into conversion-focused infrastructure with long-term ownership and technical integrity."
      maxWidth="max-w-4xl"
    />

    <div class="mt-10 grid gap-5 md:grid-cols-3">
      {principles.map((item) => (
        <article class="glass-card rounded-xl p-5">
          <h2 class="text-lg font-extrabold text-white">{item.title}</h2>
          <p class="mt-3 text-sm text-slate-300">{item.body}</p>
        </article>
      ))}
    </div>

    <div class="mt-8 rounded-2xl border border-violet-300/25 bg-gradient-to-b from-violet-500/10 to-black/20 p-6">
      <p class="text-sm text-slate-200">
        We combine design clarity, conversion strategy, and technical performance in one delivery model — then transfer ownership cleanly.
      </p>
    </div>
  </PageSection>
</Layout>
