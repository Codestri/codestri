---
import Layout from '../layouts/Layout.astro';
import SectionLead from '../components/SectionLead.astro';
import PageSection from '../components/PageSection.astro';

const pillars = [
  {
    title: 'Design',
    body: 'Modern, trust-building UI that positions businesses professionally and clearly.',
  },
  {
    title: 'Conversion Thinking',
    body: 'Intentional structure, stronger CTA flow, and messaging hierarchy that drives action.',
  },
  {
    title: 'Technical Performance',
    body: 'Fast, clean, SEO-ready architecture built for long-term maintainability and ownership.',
  },
];
---

<Layout title="About | Codestri">
  <PageSection>
    <SectionLead
      eyebrow="About Codestri"
      title="We donâ€™t just spruce websites up. We rebuild them as revenue infrastructure."
      description="Codestri modernizes outdated websites into high-performance digital assets that clients fully own."
      maxWidth="max-w-4xl"
    />

    <div class="mt-10 grid gap-5 md:grid-cols-3">
      {
        pillars.map((pillar) => (
          <article class="rounded-xl border border-white/10 bg-black/25 p-5">
            <h2 class="text-xl font-extrabold">{pillar.title}</h2>
            <p class="mt-2 text-slate-300">{pillar.body}</p>
          </article>
        ))
      }
    </div>

    <div class="mt-8 rounded-2xl border border-violet-300/25 bg-gradient-to-b from-violet-500/10 to-black/20 p-6">
      <p class="text-sm text-slate-200">
        No bloated stacks. No dependency traps. No duct-tape fixes. <span class="font-semibold text-white">Built once. Built right.</span>
      </p>
    </div>
  </PageSection>
</Layout>
