---
import Layout from '../layouts/Layout.astro';
import SectionLead from '../components/SectionLead.astro';
import Checklist from '../components/Checklist.astro';
import PageSection from '../components/PageSection.astro';

const contactPoints = [
  'Project goals and timeline',
  'Current site friction points',
  'Design and content expectations',
];

const engagementPaths = [
  'Single-scope polish sprint',
  'Full multi-page rebuild',
  'Ongoing optimization support',
];
---

<Layout title="Contact | Codestri">
  <PageSection>
    <SectionLead
      eyebrow="Contact"
      title="Let’s shape your next high-quality release."
      description="Share your goals and constraints, and we’ll propose a practical, premium path forward."
      maxWidth="max-w-2xl"
    />

    <div class="mt-10 grid gap-6 md:grid-cols-[1.3fr_1fr]">
      <article class="rounded-2xl border border-white/10 bg-black/25 p-6 backdrop-blur-sm">
        <p class="text-sm font-semibold uppercase tracking-wider text-slate-400">What to include</p>
        <div class="mt-4">
          <Checklist items={contactPoints} />
        </div>
      </article>

      <article class="rounded-2xl border border-violet-300/25 bg-gradient-to-b from-violet-500/10 to-black/30 p-6 backdrop-blur-sm">
        <p class="text-sm font-semibold uppercase tracking-wider text-slate-400">Email</p>
        <a
          href="mailto:contact@codestri.com"
          class="mt-4 inline-flex rounded-lg bg-violet-400 px-5 py-3 text-sm font-bold text-black transition hover:bg-violet-300"
        >
          contact@codestri.com
        </a>
        <p class="mt-4 text-sm text-slate-400">Typical response window: within one business day.</p>
      </article>
    </div>

    <div class="mt-6 rounded-2xl border border-white/10 bg-black/20 p-6 backdrop-blur-sm">
      <p class="text-sm font-semibold uppercase tracking-wider text-slate-400">Common engagement paths</p>
      <div class="mt-3">
        <Checklist items={engagementPaths} />
      </div>
    </div>
  </PageSection>
</Layout>
