---
import Layout from '../layouts/Layout.astro';
import SectionLead from '../components/SectionLead.astro';
import PageSection from '../components/PageSection.astro';

const services = [
  {
    title: '01 路 Website Audit',
    body: 'Lighthouse performance, speed diagnostics, UX friction mapping, and conversion critique.',
  },
  {
    title: '02 路 Strategic Redesign',
    body: 'Modern visual direction, stronger layout hierarchy, CTA architecture, and messaging clarity.',
  },
  {
    title: '03 路 Rebuild & Install',
    body: 'Astro-based clean build with mobile-first responsiveness and SEO-ready structure.',
  },
  {
    title: '04 路 Ownership Transfer',
    body: 'Source code handoff, maintainable structure, and no recurring lock-in dependency.',
  },
];
---

<Layout title="Services | Codestri">
  <PageSection>
    <SectionLead
      eyebrow="Service Architecture"
      title="A redesign system built to produce business results, not pretty dead pages."
      description="Every engagement follows a disciplined four-step model so quality, speed, and ownership stay predictable."
      maxWidth="max-w-4xl"
    />

    <div class="mt-10 grid gap-5 md:grid-cols-2">
      {services.map((service) => (
        <article class="glass-card rounded-2xl p-6">
          <h2 class="text-xl font-black text-white">{service.title}</h2>
          <p class="mt-3 text-sm text-slate-300">{service.body}</p>
        </article>
      ))}
    </div>
  </PageSection>
</Layout>
