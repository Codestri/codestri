---
interface Item {
  question: string;
  answer: string;
}

interface Props {
  title?: string;
  items: Item[];
}

const { title = 'Common questions', items = [] } = Astro.props as Props;
---

<section class="mt-10 rounded-2xl border border-white/10 bg-black/20 p-6 backdrop-blur-sm">
  <h2 class="text-2xl font-extrabold tracking-tight">{title}</h2>
  <div class="mt-5 space-y-3">
    {items.map((item) => (
      <details class="group rounded-xl border border-white/10 bg-white/[0.02] px-4 py-3">
        <summary class="cursor-pointer list-none text-sm font-bold text-slate-100 marker:content-none">
          <span class="inline-flex items-center gap-2">
            <span class="inline-block h-1.5 w-1.5 rounded-full bg-violet-300"></span>
            {item.question}
          </span>
        </summary>
        <p class="pt-3 text-sm leading-relaxed text-slate-300">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
