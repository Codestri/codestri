---
const tiers = [
  {
    name: 'Audit Sprint',
    price: '$250',
    cadence: '/ project',
    blurb: 'For businesses that need clear diagnostics and a practical redesign roadmap.',
    features: ['Lighthouse + speed report', 'Conversion friction mapping', 'Actionable redesign blueprint'],
    cta: 'Start Audit',
    accent: 'border-red-400/35',
    button: 'border border-red-400/45 text-red-100 hover:bg-red-500/10',
  },
  {
    name: 'Redesign Build',
    price: '$1,500',
    cadence: '/ site',
    blurb: 'End-to-end redesign + rebuild for businesses replacing underperforming websites.',
    features: ['Strategic redesign system', 'Astro rebuild + optimization', 'Ownership handoff documentation'],
    cta: 'Choose Redesign',
    accent: 'border-red-400/40 shadow-[0_0_30px_rgba(167,139,250,0.18)]',
    button: 'bg-red-500 text-slate-950 hover:bg-red-400',
    badge: 'Core Offer',
  },
  {
    name: 'Revenue Ops',
    price: '$3,500',
    cadence: '/ sprint',
    blurb: 'For teams needing multi-page architecture, conversion iteration, and higher velocity execution.',
    features: ['Advanced page architecture', 'Conversion and UX iterations', 'Priority implementation support'],
    cta: 'Scale With Ops',
    accent: 'border-red-300/35',
    button: 'border border-red-300/45 text-red-100 hover:bg-red-300/15',
  },
];
---

<div class="grid gap-5 md:grid-cols-3">
  {tiers.map((tier) => (
    <article class:list={[
      'relative rounded-2xl border bg-slate-950/45 p-6 backdrop-blur-sm',
      tier.accent,
    ]}>
      {tier.badge && (
        <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-red-500 px-3 py-1 text-xs font-black uppercase tracking-wide text-slate-950">
          {tier.badge}
        </span>
      )}
      <h3 class="text-xl font-extrabold">{tier.name}</h3>
      <p class="mt-3 text-4xl font-black">
        {tier.price}
        <span class="ml-1 text-sm font-semibold text-slate-400">{tier.cadence}</span>
      </p>
      <p class="mt-3 text-slate-300">{tier.blurb}</p>

      <ul class="mt-5 space-y-2 text-sm text-slate-200">
        {tier.features.map((feature) => (
          <li>â€¢ {feature}</li>
        ))}
      </ul>

      <a href="/contact" class:list={['mt-6 inline-block rounded-lg px-4 py-2 text-sm font-bold transition', tier.button]}>
        {tier.cta}
      </a>
    </article>
  ))}
</div>
