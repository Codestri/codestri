---
const tiers = [
  {
    name: 'Free Scout',
    price: '$0',
    cadence: '/ forever',
    blurb: 'Perfect for testing ideas before spending money.',
    features: ['1 page starter template', 'Basic style customization', 'Community-level guidance'],
    cta: 'Start Free',
    accent: 'border-white/15',
    button: 'border border-white/20 text-white hover:bg-white/10',
  },
  {
    name: 'Builder',
    price: '$100',
    cadence: '/ project',
    blurb: 'For founders who need speed, clarity, and launch momentum.',
    features: ['Up to 5 polished sections', 'Conversion-focused structure', 'Delivery-ready Astro code'],
    cta: 'Choose Builder',
    accent: 'border-violet-300/40 shadow-[0_0_30px_rgba(139,92,246,0.2)]',
    button: 'bg-violet-400 text-black hover:bg-violet-300',
    badge: 'Most Popular',
  },
  {
    name: 'Scale Ops',
    price: '$1000',
    cadence: '/ sprint',
    blurb: 'For teams replacing legacy sites with growth-ready systems.',
    features: ['Multi-page architecture', 'Performance + UX tuning', 'Priority iteration support'],
    cta: 'Go Scale',
    accent: 'border-indigo-300/30',
    button: 'border border-indigo-300/40 text-indigo-100 hover:bg-indigo-300/10',
  },
];
---

<div class="grid gap-5 md:grid-cols-3">
  {tiers.map((tier) => (
    <article class:list={[
      'relative rounded-2xl border bg-black/30 p-6 backdrop-blur-sm',
      tier.accent,
    ]}>
      {tier.badge && (
        <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-violet-400 px-3 py-1 text-xs font-black uppercase tracking-wide text-black">
          {tier.badge}
        </span>
      )}
      <h3 class="text-xl font-extrabold">{tier.name}</h3>
      <p class="mt-3 text-4xl font-black">
        {tier.price}
        <span class="ml-1 text-sm font-semibold text-slate-400">{tier.cadence}</span>
      </p>
      <p class="mt-3 text-slate-300">{tier.blurb}</p>

      <ul class="mt-5 space-y-2 text-sm text-slate-200">
        {tier.features.map((feature) => (
          <li>â€¢ {feature}</li>
        ))}
      </ul>

      <a href="/contact" class:list={['mt-6 inline-block rounded-lg px-4 py-2 text-sm font-bold transition', tier.button]}>
        {tier.cta}
      </a>
    </article>
  ))}
</div>
