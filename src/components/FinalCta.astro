---
interface Props {
  title: string;
  description?: string;
  actionLabel?: string;
  actionHref?: string;
}

const {
  title,
  description = '',
  actionLabel = 'Get Started',
  actionHref = '/contact',
} = Astro.props as Props;
---

<section class="mt-10 rounded-2xl border border-red-400/35 bg-gradient-to-b from-red-500/12 to-black/20 p-6 md:p-8">
  <h2 class="text-2xl font-semibold text-white">{title}</h2>
  {description && <p class="mt-3 max-w-2xl text-slate-300">{description}</p>}
  <a
    href={actionHref}
    class="mt-6 inline-flex rounded-lg bg-red-500 px-5 py-3 text-sm font-bold text-black transition hover:bg-red-500"
  >
    {actionLabel}
  </a>
</section>
